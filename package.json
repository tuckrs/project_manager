{
  "name": "project-manager",
  "version": "1.0.0",
  "description": "Project Management Tool",
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"cd frontend && npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "cd frontend && npm run build && electron-builder",
    "test": "cd frontend && npm test",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.projectmanager.app",
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "backend/**/*",
      "!backend/venv/**/*",
      "!**/node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "portfinder": "^1.0.32",
    "wait-on": "^7.2.0"
  }
}
